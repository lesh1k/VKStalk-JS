style.
    body {
        display: flex;
        min-height: 100vh;
        flex-direction: column;
    }

    main {
        flex: 1 0 auto;
    }

    .content-wrapper {
        margin-top: 30px;
    }

    .stalking-card.running .stalk-start,
    .stalking-card.stopped .stalk-stop {
        display: none;
    }

    .stalk-data {
        min-height: 0;
        transition: min-height .2s;
    }

    footer.page-footer {
        padding-top: 0;
    }

    .collapsible-report-general .collapsible-body {
        overflow-x: auto;
    }

    .vertical-align-middle {
        vertical-align: middle!important;
    }

    .report-icon-container {
        margin-top: 10px;
    }

    .display-none {
        display: none;
    }
